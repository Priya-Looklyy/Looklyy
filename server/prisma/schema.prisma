generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String      @id @default(cuid())
  name           String
  username       String      @unique
  email          String      @unique
  passwordHash   String
  phoneNumber    String?
  profilePicture String?
  dateOfBirth    DateTime?
  gender         String?
  location       String?
  bio            String?
  favoriteColors String[]    @default([])
  stylePreferences String    @default("[]")
  favoriteBrands String      @default("[]")
  clothingSize   String?
  shoeSize       String?
  fitPreference  String?
  wardrobeImages String      @default("[]")
  socialMediaLinks String    @default("[]")
  wishlist       String      @default("[]")
  notificationPreferences String @default("[]")
  privacySettings String     @default("{}")
  paymentInfo    String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  lookboards     Lookboard[]
}

model Lookboard {
  id        String   @id @default(cuid())
  userId    String
  title     String
  images    String[] @default([])
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Brand {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  logoUrl     String?
  products    Product[]
}

model Product {
  id          String  @id @default(cuid())
  brandId     String
  name        String
  description String?
  price       Float?
  imageUrl    String?
  colors      String[] @default([])
  brand       Brand   @relation(fields: [brandId], references: [id])
}
